<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- adding the school logo-->
    <ImageView

      android:id="@+id/logoMDS"
      android:layout_width="310dp"
      android:layout_height="149dp"
      android:layout_marginStart="44dp"
      android:layout_marginLeft="44dp"
      android:layout_marginEnd="44dp"
      android:layout_marginRight="44dp"
      android:layout_marginBottom="51dp"
      android:src="@drawable/logogranddetoure"
      app:layout_constraintBottom_toTopOf="@+id/youtubesupportfragment"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.096" />
    <!-- adding a image of the api youtube view -->

    <fragment
        android:id="@+id/youtubesupportfragment"
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
  <!-- adding the page title-->
  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Presentation My Digital School"
    android:textSize="28sp"
    android:textStyle="bold|italic"

    app:layout_constraintBottom_toTopOf="@+id/youtubesupportfragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/logoMDS"
    app:layout_constraintVertical_bias="0.146" />
  <!-- adding the school presentation -->
  <TextView
    android:id="@+id/textView2"
    android:layout_width="378dp"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:text="Choisir sa formation dans le web chez MyDigitalSchool Lille, c'est bénéficier d'un campus de 3 500m2 en plein centre-ville de Lille, partagé avec d'autres écoles pour créer plus de synergies entre nos étudiants et laisser place à la convivialité.

Ouvert de 7h30 à 20h30, le campus est toujours vivant, quel que soit le moment de la journée : activités proposées par les asociations, conférences, afterworks, parties de babyfoot ou de tennis de table..."
    app:layout_constraintBottom_toTopOf="@+id/youtubesupportfragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.515"
    app:layout_constraintStart_toStartOf="parent"

    app:layout_constraintTop_toBottomOf="@+id/textView"
    app:layout_constraintVertical_bias="0.384" />

</androidx.constraintlayout.widget.ConstraintLayout>
